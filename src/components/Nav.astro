---

const sections = [
    { name: 'About', href:'/about' },
    { name: 'Projects', href:'/projects' },
    { name: 'Content', href:'/content' }
];

const { currentPath } = Astro.props;
const basePath = currentPath.split('/').slice(0, 2).join('/');
---

<nav class="mx-auto p-4 bg-orange-50 border-b-2 border-primdark" x-data="{ open: false }">
    <div class="flex items-center justify-between">
        <div class="flex flex-col items-center">
            <a href="#" class="text-xl font-serif text-primdark">Dean Thakur</a>
            <span class="text-xs text-secdark text-serif">new york | ithaca</span>
        </div>
        <div class="hidden md:flex space-x-6">
            <a href="/about" class="text-secdark hover:underline font-serif">About</a>
            <a href="/projects" class="text-secdark hover:underline font-serif">Projects</a>
            <a href="/content" class="text-secdark hover:underline font-serif">Content</a>
        </div>
        <div class="md:hidden">
            <button @click="open = !open" class="text-primlight focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
    <div class="md:hidden" x-show="open" @click.away="open = false" x-transition>
        <a href="/about" class="block px-1 py-2 text-sm text-seclight rounded font-serif">About</a>
        <a href="/projects" class="block px-1 py-2 text-sm text-seclight rounded font-serif">Projects</a>
        <a href="/content" class="block px-1 py-2 text-sm text-seclight rounded font-serif">Content</a>
    </div>
</nav>