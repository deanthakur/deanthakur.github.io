---

const sections = [
    { name: 'About', href:'/about' },
    { name: 'Projects', href:'/projects' },
    { name: 'Content', href:'/content' }
];

const { currentPath } = Astro.props;
const basePath = currentPath.split('/').slice(0, 2).join('/');
---

<nav class="mx-auto p-4 bg-orange-50 border-b-2 border-primdark border-solid" x-data="{ open: false }">
    <div class="flex items-center justify-between">
        <div class="flex flex-col items-center">
            <a href="#" class="text-xl font-serif text-primdark">Dean Thakur</a>
            <span class="text-xs text-secdark text-serif">new york | ithaca</span>
        </div>
        <div class="hidden md:flex space-x-6">
            <a href="/about" class="text-secdark hover:underline font-serif hover:text-red-700">About</a>
            <a href="/projects" class="text-secdark hover:underline font-serif hover:text-red-700">Projects</a>
            <div class="group relative cursor-pointer">
                <div>
                <a href="/content" class="text-secdark group-hover:underline font-serif hover:text-red-700">Content</a>
                <div class="invisible absolute z-50 group-hover:visible bg-orange-50 border-r-4 border-l-4 border-b-4 border-double border-primdark text-center">
                    <a href="/content/photos" class="font-serif text-sm mt-6 hover:underline hover:text-red-700">Photos</a>
                    <a href="/content/writing" class="font-serif text-sm mt-6 hover:underline hover:text-red-700">Writing</a>
                </div>
                </div>
            </div>
            
        </div>
        <div class="md:hidden">
            <button @click="open = !open" class="text-primdark focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
    <div class="md:hidden flex flex-col items-start mt-4" x-show="open" @click.away="open = false" x-transition>
        <a href="/about" class="block px-1 py-2 text-sm text-primdark rounded font-serif hover:text-red-700">About</a>
        <a href="/projects" class="block px-1 py-2 text-sm text-primdark rounded font-serif hover:text-red-700">Projects</a>
        <a href="/content" class="block px-1 py-2 text-sm text-primdark rounded font-serif hover:text-red-700">Content</a>
    </div>
</nav>